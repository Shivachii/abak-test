{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/Mpesa/PaymentForm.jsx",
    "src/app/[locale]/resources/audio-visual/images/page.jsx",
    "src/app/[locale]/resources/audio-visual/audio/page.tsx",
    "src/components/ImageViewer/AllGalleryMedia.tsx",
    "src/app/[locale]/landing/Qardh.jsx",
    "src/app/[locale]/landing/Programs.jsx",
    "src/app/[locale]/landing/Financial.jsx",
    "src/app/[locale]/islamic-learning/hawza-seyyidah/page.jsx",
    "src/components/Hero/Hero.jsx",
    "src/app/[locale]/programs/community-services/page.jsx",
    "src/app/[locale]/programs/page.jsx"
  ],
  "exclude": ["node_modules"]
}
